# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Image Processing Settings
MAX_IMAGE_SIZE_MB=10
CROP_TIMEOUT_SECONDS=3

# Google Cloud Storage (GCS) Upload Configuration
GCS_UPLOAD_ENABLED=false
GCS_BUCKET_NAME=your-bucket-name
GCS_CREDENTIALS_PATH=./gcs-service-account-key.json
GCS_DEFAULT_USER_ID=admin
GCS_SIGNED_URL_EXPIRATION_MINUTES=60

# Security
SECRET_KEY=your-secret-key-here-change-in-production
